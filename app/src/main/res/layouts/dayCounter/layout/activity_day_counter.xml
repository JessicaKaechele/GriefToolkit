<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dayCounter.DayCounter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="542dp">

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/days"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dayTextView" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/days">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/yearNumber"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/monthNumber"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/weeksNumber"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/daysNumber"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20dp">

                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/yearString"
                    android:gravity="center"
                    android:text="@string/years">

                </TextView>

                <TextView
                    android:id="@+id/monthString"
                    android:gravity="center"
                    android:text="@string/months">

                </TextView>

                <TextView
                    android:id="@+id/weeksString"
                    android:gravity="center"
                    android:text="@string/weeks">

                </TextView>

                <TextView
                    android:id="@+id/daysString"
                    android:gravity="center"
                    android:text="@string/days">

                </TextView>
            </TableRow>


        </TableLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>