<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/moodTracker"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="@string/mood_tracker" />

            <Button
                android:id="@+id/memories"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="@string/memories" />

            <Button
                android:id="@+id/books"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="@string/books" />

            <Button
                android:id="@+id/sources"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="@string/sources" />

            <Button
                android:id="@+id/dayCounter"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="@string/dayCounter" />

            <Button
                android:id="@+id/quotes"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="@string/quotes" />

            <Button
                android:id="@+id/memorabilia"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="@string/memorabilia" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>