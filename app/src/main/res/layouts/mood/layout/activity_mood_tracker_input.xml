<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mood.MoodTrackerInput">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="1. Januar"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wie ging es dir heute?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="379dp"
        android:layout_height="139dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/mood1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood1"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="1"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />

            <TextView
                android:id="@+id/mood2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood2"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="2"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />

            <TextView
                android:id="@+id/mood3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood3"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="3"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />

            <TextView
                android:id="@+id/mood4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood4"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="4"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />

            <TextView
                android:id="@+id/mood5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood5"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="5"
                android:textColor="#000"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mood6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood6"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="6"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />


            <TextView
                android:id="@+id/mood7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood7"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="7"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />

            <TextView
                android:id="@+id/mood8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood8"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="8"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />

            <TextView
                android:id="@+id/mood9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood9"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="9"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView android:padding="2dp" />

            <TextView
                android:id="@+id/mood10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/table_border"
                android:backgroundTint="@color/mood10"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="18dip"
                android:text="10"
                android:textColor="#000"
                android:textSize="20dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/delete_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/grey"
        android:onClick="onDelete"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>